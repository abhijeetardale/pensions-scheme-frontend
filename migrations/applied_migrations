#!/bin/bash

echo "Applying migration UKBankAccount"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /uKBankAccount                       controllers.register.UKBankAccountController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /uKBankAccount                       controllers.register.UKBankAccountController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeUKBankAccount                       controllers.register.UKBankAccountController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeUKBankAccount                       controllers.register.UKBankAccountController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "uKBankAccount.title = uKBankAccount" >> ../conf/messages.en
echo "uKBankAccount.heading = uKBankAccount" >> ../conf/messages.en
echo "uKBankAccount.checkYourAnswersLabel = uKBankAccount" >> ../conf/messages.en
echo "uKBankAccount.error.required = Please give an answer for uKBankAccount" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def uKBankAccount: Option[Boolean] = cacheMap.getEntry[Boolean](UKBankAccountId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def uKBankAccount: Option[AnswerRow] = userAnswers.uKBankAccount map {";\
     print "    x => AnswerRow(\"uKBankAccount.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.UKBankAccountController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration UKBankAccount completed"
