#!/bin/bash

echo "Applying migration Example"

echo "Adding routes to register.establishers.company.routes"

echo "" >> ../conf/register.establishers.company.routes
echo "GET        /example                       controllers.register.establishers.company.ExampleController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes
echo "POST       /example                       controllers.register.establishers.company.ExampleController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes

echo "GET        /changeExample                       controllers.register.establishers.company.ExampleController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.routes
echo "POST       /changeExample                       controllers.register.establishers.company.ExampleController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"example__title = example" >> ../conf/messages.en
echo messages__"example__heading = example" >> ../conf/messages.en
echo messages__"example_field1 = Field 1" >> ../conf/messages.en
echo messages__"example_field2 = Field 2" >> ../conf/messages.en
echo messages__"example_checkYourAnswersLabel = example" >> ../conf/messages.en
echo messages__error__"example_field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__error__"example_field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def example: Option[Example] = cacheMap.getEntry[Example](ExampleId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def example: Option[AnswerRow] = userAnswers.example map {";\
     print "    x => AnswerRow(\"example.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, routes.ExampleController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration Example completed"
