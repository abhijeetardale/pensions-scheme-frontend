#!/bin/bash

echo "Applying migration CompanyDetails"

echo "Adding routes to trustees.routes"

echo "" >> ../conf/register.trustee.company.routes
echo "GET        /companyDetails                       controllers.register.trustee.company.CompanyDetailsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustee.company.routes
echo "POST       /companyDetails                       controllers.register.trustee.company.CompanyDetailsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustee.company.routes

echo "GET        /changeCompanyDetails                       controllers.register.trustee.company.CompanyDetailsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustee.company.routes
echo "POST       /changeCompanyDetails                       controllers.register.trustee.company.CompanyDetailsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustee.company.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"companyDetails__title = companyDetails" >> ../conf/messages.en
echo messages__"companyDetails__heading = companyDetails" >> ../conf/messages.en
echo messages__"companyDetails__field1 = Field 1" >> ../conf/messages.en
echo messages__"companyDetails__field2 = Field 2" >> ../conf/messages.en
echo messages__"companyDetails__checkYourAnswersLabel = companyDetails" >> ../conf/messages.en
echo messages__"companyDetails__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"companyDetails__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyDetails: Option[AnswerRow] = userAnswers.get(identifiers.register.trustee.company.CompanyDetailsId) map {";\
     print "    x => AnswerRow(\"companyDetails.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.trustees.routes.CompanyDetailsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyDetails completed"
