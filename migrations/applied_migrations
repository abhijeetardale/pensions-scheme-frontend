#!/bin/bash

echo "Applying migration SchemesOverview"

echo "Adding routes to app.routes"
echo "" >> ../conf/app.routes
echo "GET        /schemesOverview                       controllers.SchemesOverviewController.onPageLoad()" >> ../conf/app.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "schemesOverview.title = schemesOverview" >> ../conf/messages.en
echo "schemesOverview.heading = schemesOverview" >> ../conf/messages.en

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration SchemesOverview completed"
