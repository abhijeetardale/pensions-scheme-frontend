#!/bin/bash

echo "Applying migration EstablisherNino"

echo "Adding routes to conf/register.establishers.individual.routes"
echo "Applying migration UniqueTaxReference"

echo "Adding routes to register.establishers.individual.routes"

echo "" >> ../conf/app.routes
echo "GET        /establisherNino               controllers.register.establishers.individual.EstablisherNinoController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /establisherNino               controllers.register.establishers.individual.EstablisherNinoController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes

echo "GET        /changeEstablisherNino               controllers.register.establishers.individual.EstablisherNinoController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /changeEstablisherNino               controllers.register.establishers.individual.EstablisherNinoController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes
echo "" >> ../conf/register.establishers.individual.routes
echo "GET        /uniqueTaxReference                       controllers.register.establishers.individual.UniqueTaxReferenceController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /uniqueTaxReference                       controllers.register.establishers.individual.UniqueTaxReferenceController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes

echo "GET        /changeUniqueTaxReference                       controllers.register.establishers.individual.UniqueTaxReferenceController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /changeUniqueTaxReference                       controllers.register.establishers.individual.UniqueTaxReferenceController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "establisherNino.title = establisherNino" >> ../conf/messages.en
echo "establisherNino.heading = establisherNino" >> ../conf/messages.en
echo "establisherNino.option1 = establisherNino" Option 1 >> ../conf/messages.en
echo "establisherNino.option2 = establisherNino" Option 2 >> ../conf/messages.en
echo "establisherNino.checkYourAnswersLabel = establisherNino" >> ../conf/messages.en
echo "establisherNino.error.required = Please give an answer for establisherNino" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def establisherNino: Option[EstablisherNino] = cacheMap.getEntry[EstablisherNino](EstablisherNinoId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def establisherNino: Option[AnswerRow] = userAnswers.establisherNino map {";\
     print "    x => AnswerRow(\"establisherNino.checkYourAnswersLabel\", s\"establisherNino.$x\", true, controllers.register.establishers.individual.routes.EstablisherNinoController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala
echo "uniqueTaxReference.title = uniqueTaxReference" >> ../conf/messages.en
echo "uniqueTaxReference.heading = uniqueTaxReference" >> ../conf/messages.en
echo "uniqueTaxReference.checkYourAnswersLabel = uniqueTaxReference" >> ../conf/messages.en
echo "uniqueTaxReference.error.required = Please give an answer for uniqueTaxReference" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def uniqueTaxReference: Option[Boolean] = cacheMap.getEntry[Boolean](UniqueTaxReferenceId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def uniqueTaxReference: Option[AnswerRow] = userAnswers.uniqueTaxReference map {";\
     print "    x => AnswerRow(\"uniqueTaxReference.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.UniqueTaxReferenceController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration UniqueTaxReference completed"
echo "Migration EstablisherNino completed"
