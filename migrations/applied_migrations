#!/bin/bash

echo "Applying migration IndividualPostCodeLookup"

echo "Adding routes to register.trustees.individual.routes"

echo "" >> ../conf/register.trustees.individual.routes
echo "GET        /individualPostCodeLookup               controllers.register.trustees.individual.IndividualPostCodeLookupController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustees.individual.routes
echo "POST       /individualPostCodeLookup               controllers.register.trustees.individual.IndividualPostCodeLookupController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustees.individual.routes

echo "GET        /changeIndividualPostCodeLookup                        controllers.register.trustees.individual.IndividualPostCodeLookupController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustees.individual.routes
echo "POST       /changeIndividualPostCodeLookup                        controllers.register.trustees.individual.IndividualPostCodeLookupController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustees.individual.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__individualPostCodeLookup__title = individualPostCodeLookup" >> ../conf/messages.en
echo "messages__individualPostCodeLookup__heading = individualPostCodeLookup" >> ../conf/messages.en
echo "messages__individualPostCodeLookup__checkYourAnswersLabel = individualPostCodeLookup" >> ../conf/messages.en
echo "messages__individualPostCodeLookup__error__required = Please give an answer for individualPostCodeLookup" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def individualPostCodeLookup: Option[AnswerRow] = userAnswers.get(identifiers.register.trustees.individual.IndividualPostCodeLookupId) map {";\
     print "    x => AnswerRow(\"individualPostCodeLookup.checkYourAnswersLabel\", Seq(s\"$x\"), false, controllers.register.trustees.individual.routes.IndividualPostCodeLookupController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration IndividualPostCodeLookup completed"
