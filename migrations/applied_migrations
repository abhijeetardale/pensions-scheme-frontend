#!/bin/bash

echo "Applying migration TrusteeContactDetails"

echo "Adding routes to register.trustees.individual.routes"

echo "" >> ../conf/register.trustees.individual.routes
echo "GET        /trusteeContactDetails                       controllers.register.trustees.individual.TrusteeContactDetailsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustees.individual.routes
echo "POST       /trusteeContactDetails                       controllers.register.trustees.individual.TrusteeContactDetailsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustees.individual.routes

echo "GET        /changeTrusteeContactDetails                       controllers.register.trustees.individual.TrusteeContactDetailsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustees.individual.routes
echo "POST       /changeTrusteeContactDetails                       controllers.register.trustees.individual.TrusteeContactDetailsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustees.individual.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"trusteeContactDetails__title = trusteeContactDetails" >> ../conf/messages.en
echo messages__"trusteeContactDetails__heading = trusteeContactDetails" >> ../conf/messages.en
echo messages__"trusteeContactDetails__field1 = Field 1" >> ../conf/messages.en
echo messages__"trusteeContactDetails__field2 = Field 2" >> ../conf/messages.en
echo messages__"trusteeContactDetails__checkYourAnswersLabel = trusteeContactDetails" >> ../conf/messages.en
echo messages__"trusteeContactDetails__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"trusteeContactDetails__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def trusteeContactDetails: Option[AnswerRow] = userAnswers.get(identifiers.register.trustees.individual.TrusteeContactDetailsId) map {";\
     print "    x => AnswerRow(\"trusteeContactDetails.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.register.trustees.individual.routes.TrusteeContactDetailsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration TrusteeContactDetails completed"
