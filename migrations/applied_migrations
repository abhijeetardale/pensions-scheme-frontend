#!/bin/bash

echo "Applying migration CompanyUniqueTaxReference"

echo "Adding routes to conf/register.trustees.company.routes"

echo "" >> ../conf/app.routes
echo "GET        /companyUniqueTaxReference               controllers.register.trustees.company.CompanyUniqueTaxReferenceController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustees.company.routes
echo "POST       /companyUniqueTaxReference               controllers.register.trustees.company.CompanyUniqueTaxReferenceController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustees.company.routes

echo "GET        /changeCompanyUniqueTaxReference               controllers.register.trustees.company.CompanyUniqueTaxReferenceController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustees.company.routes
echo "POST       /changeCompanyUniqueTaxReference               controllers.register.trustees.company.CompanyUniqueTaxReferenceController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustees.company.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__title = companyUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__heading = companyUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__option1 = companyUniqueTaxReference" Option 1 >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__option2 = companyUniqueTaxReference" Option 2 >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__checkYourAnswersLabel = companyUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyUniqueTaxReference__error__required = Please give an answer for companyUniqueTaxReference" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyUniqueTaxReference: Option[AnswerRow] = userAnswers.get(identifiers.register.trustees.company.CompanyUniqueTaxReferenceId) map {";\
     print "    x => AnswerRow(\"messages__companyUniqueTaxReference__checkYourAnswersLabel\", Seq(s\"companyUniqueTaxReference.$x\"), true, controllers.register.trustees.company.routes.CompanyUniqueTaxReferenceController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyUniqueTaxReference completed"
