#!/bin/bash

echo "Applying migration OccupationalPensionScheme"
echo "Applying migration BenefitsInsurer"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /occupationalPensionScheme                       controllers.register.OccupationalPensionSchemeController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /occupationalPensionScheme                       controllers.register.OccupationalPensionSchemeController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "" >> ../conf/register.routes
echo "GET        /benefitsInsurer                       controllers.register.BenefitsInsurerController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /benefitsInsurer                       controllers.register.BenefitsInsurerController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeOccupationalPensionScheme                       controllers.register.OccupationalPensionSchemeController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeOccupationalPensionScheme                       controllers.register.OccupationalPensionSchemeController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "GET        /changeBenefitsInsurer                       controllers.register.BenefitsInsurerController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeBenefitsInsurer                       controllers.register.BenefitsInsurerController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "occupationalPensionScheme.title = occupationalPensionScheme" >> ../conf/messages.en
echo "occupationalPensionScheme.heading = occupationalPensionScheme" >> ../conf/messages.en
echo "occupationalPensionScheme.checkYourAnswersLabel = occupationalPensionScheme" >> ../conf/messages.en
echo "occupationalPensionScheme.error.required = Please give an answer for occupationalPensionScheme" >> ../conf/messages.en
echo "benefitsInsurer.title = benefitsInsurer" >> ../conf/messages.en
echo "benefitsInsurer.heading = benefitsInsurer" >> ../conf/messages.en
echo "benefitsInsurer.field1 = Field 1" >> ../conf/messages.en
echo "benefitsInsurer.field2 = Field 2" >> ../conf/messages.en
echo "benefitsInsurer.checkYourAnswersLabel = benefitsInsurer" >> ../conf/messages.en
echo "benefitsInsurer.error.field1.required = Please give an answer for field1" >> ../conf/messages.en
echo "benefitsInsurer.error.field2.required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def occupationalPensionScheme: Option[Boolean] = cacheMap.getEntry[Boolean](OccupationalPensionSchemeId.toString)";\
     print "  def benefitsInsurer: Option[BenefitsInsurer] = cacheMap.getEntry[BenefitsInsurer](BenefitsInsurerId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def occupationalPensionScheme: Option[AnswerRow] = userAnswers.occupationalPensionScheme map {";\
     print "    x => AnswerRow(\"occupationalPensionScheme.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.OccupationalPensionSchemeController.onPageLoad(CheckMode).url)"; print "  }";\
     print "  def benefitsInsurer: Option[AnswerRow] = userAnswers.benefitsInsurer map {";\
     print "    x => AnswerRow(\"benefitsInsurer.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, routes.BenefitsInsurerController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration OccupationalPensionScheme completed"
echo "Migration BenefitsInsurer completed"
