#!/bin/bash

echo "Applying migration MembershipFuture"

echo "Adding routes to conf/register.routes"

echo "" >> ../conf/app.routes
echo "GET        /membershipFuture               controllers.register.MembershipFutureController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /membershipFuture               controllers.register.MembershipFutureController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeMembershipFuture               controllers.register.MembershipFutureController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeMembershipFuture               controllers.register.MembershipFutureController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "membershipFuture.title = membershipFuture" >> ../conf/messages.en
echo "membershipFuture.heading = membershipFuture" >> ../conf/messages.en
echo "membershipFuture.option1 = membershipFuture" Option 1 >> ../conf/messages.en
echo "membershipFuture.option2 = membershipFuture" Option 2 >> ../conf/messages.en
echo "membershipFuture.checkYourAnswersLabel = membershipFuture" >> ../conf/messages.en
echo "membershipFuture.error.required = Please give an answer for membershipFuture" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def membershipFuture: Option[MembershipFuture] = cacheMap.getEntry[MembershipFuture](MembershipFutureId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def membershipFuture: Option[AnswerRow] = userAnswers.membershipFuture map {";\
     print "    x => AnswerRow(\"membershipFuture.checkYourAnswersLabel\", s\"membershipFuture.$x\", true, controllers.register.routes.MembershipFutureController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration MembershipFuture completed"
