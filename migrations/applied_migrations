#!/bin/bash

echo "Applying migration CompanyDirectorContractDetails"

echo "Adding routes to register.establishers.company.director.routes"

echo "" >> ../conf/register.establishers.company.director.routes
echo "GET        /companyDirectorContractDetails                       controllers.register.establishers.company.director.CompanyDirectorContractDetailsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /companyDirectorContractDetails                       controllers.register.establishers.company.director.CompanyDirectorContractDetailsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes

echo "GET        /changeCompanyDirectorContractDetails                       controllers.register.establishers.company.director.CompanyDirectorContractDetailsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /changeCompanyDirectorContractDetails                       controllers.register.establishers.company.director.CompanyDirectorContractDetailsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__title = companyDirectorContractDetails" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__heading = companyDirectorContractDetails" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__field1 = Field 1" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__field2 = Field 2" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__checkYourAnswersLabel = companyDirectorContractDetails" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"companyDirectorContractDetails__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyDirectorContractDetails: Option[AnswerRow] = userAnswers.get(identifiers.register.establishers.company.director.CompanyDirectorContractDetailsId) map {";\
     print "    x => AnswerRow(\"companyDirectorContractDetails.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.register.establishers.company.director.routes.CompanyDirectorContractDetailsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyDirectorContractDetails completed"
