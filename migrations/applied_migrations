#!/bin/bash

echo "Applying migration SchemeEstablishedCountry"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /schemeEstablishedCountry               controllers.register.SchemeEstablishedCountryController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /schemeEstablishedCountry               controllers.register.SchemeEstablishedCountryController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeSchemeEstablishedCountry                        controllers.register.SchemeEstablishedCountryController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeSchemeEstablishedCountry                        controllers.register.SchemeEstablishedCountryController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "schemeEstablishedCountry.title = schemeEstablishedCountry" >> ../conf/messages.en
echo "schemeEstablishedCountry.heading = schemeEstablishedCountry" >> ../conf/messages.en
echo "schemeEstablishedCountry.checkYourAnswersLabel = schemeEstablishedCountry" >> ../conf/messages.en
echo "schemeEstablishedCountry.error.required = Please give an answer for schemeEstablishedCountry" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def schemeEstablishedCountry: Option[String] = cacheMap.getEntry[String](SchemeEstablishedCountryId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def schemeEstablishedCountry: Option[AnswerRow] = userAnswers.schemeEstablishedCountry map {";\
     print "    x => AnswerRow(\"schemeEstablishedCountry.checkYourAnswersLabel\", s\"$x\", false, routes.SchemeEstablishedCountryController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration SchemeEstablishedCountry completed"
