#!/bin/bash

echo "Applying migration AdviserDetails"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /adviserDetails                       controllers.register.AdviserDetailsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /adviserDetails                       controllers.register.AdviserDetailsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeAdviserDetails                       controllers.register.AdviserDetailsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeAdviserDetails                       controllers.register.AdviserDetailsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"adviserDetails__title = adviserDetails" >> ../conf/messages.en
echo messages__"adviserDetails__heading = adviserDetails" >> ../conf/messages.en
echo messages__"adviserDetails__field1 = Field 1" >> ../conf/messages.en
echo messages__"adviserDetails__field2 = Field 2" >> ../conf/messages.en
echo messages__"adviserDetails__checkYourAnswersLabel = adviserDetails" >> ../conf/messages.en
echo messages__"adviserDetails__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"adviserDetails__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def adviserDetails: Option[AnswerRow] = userAnswers.get(identifiers.register.AdviserDetailsId) map {";\
     print "    x => AnswerRow(\"adviserDetails.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.register.routes.AdviserDetailsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration AdviserDetails completed"
