#!/bin/bash

echo "Applying migration SchemeAddressList"

echo "Adding routes to conf/register.routes"

echo "" >> ../conf/app.routes
echo "GET        /schemeAddressList               controllers.register.SchemeAddressListController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /schemeAddressList               controllers.register.SchemeAddressListController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeSchemeAddressList               controllers.register.SchemeAddressListController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeSchemeAddressList               controllers.register.SchemeAddressListController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__schemeAddressList__title = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__heading = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__option1 = schemeAddressList" Option 1 >> ../conf/messages.en
echo "messages__schemeAddressList__option2 = schemeAddressList" Option 2 >> ../conf/messages.en
echo "messages__schemeAddressList__checkYourAnswersLabel = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__error__required = Please give an answer for schemeAddressList" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def schemeAddressList: Option[AnswerRow] = userAnswers.get(SchemeAddressListId) map {";\
     print "    x => AnswerRow(\"messages__schemeAddressList__checkYourAnswersLabel\", s\"schemeAddressList.$x\", true, controllers.register.routes.SchemeAddressListController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration SchemeAddressList completed"
