#!/bin/bash

echo "Applying migration Declaration"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /declaration               controllers.register.DeclarationController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /declaration               controllers.register.DeclarationController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeDeclaration                        controllers.register.DeclarationController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeDeclaration                        controllers.register.DeclarationController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__declaration__title = declaration" >> ../conf/messages.en
echo "messages__declaration__heading = declaration" >> ../conf/messages.en
echo "messages__declaration__checkYourAnswersLabel = declaration" >> ../conf/messages.en
echo "messages__declaration__error__nonNumeric = Please give an answer for declaration using numbers" >> ../conf/messages.en
echo "messages__declaration__error__required = Please give an answer for declaration" >> ../conf/messages.en
echo "messages__declaration__error__wholeNumber = Please give an answer for declaration using whole numbers" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def declaration: Option[AnswerRow] = userAnswers.get(identifiers.register.DeclarationId) map {";\
     print "    x => AnswerRow(\"messages__declaration__checkYourAnswersLabel\", Seq(s\"$x\"), false, controllers.register.routes.DeclarationController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration Declaration completed"
