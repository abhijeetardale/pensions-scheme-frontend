#!/bin/bash

echo "Applying migration InsurerAddress"
echo "Applying migration SchemeAddressList"

echo "Adding routes to conf/register.routes"

echo "" >> ../conf/register.establishers.individual.routes
echo "GET        /manualAddress                       controllers.register.establishers.individual.ManualAddressController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /manualAddress                       controllers.register.establishers.individual.ManualAddressController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes
echo "" >> ../conf/register.establishers.company.routes
echo "GET        /companyPostCodeLookup               controllers.register.CompanyPostCodeLookupController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes
echo "POST       /companyPostCodeLookup               controllers.register.CompanyPostCodeLookupController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes
echo "" >> ../conf/app.routes
echo "GET        /schemeAddressList               controllers.register.SchemeAddressListController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /schemeAddressList               controllers.register.SchemeAddressListController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "" >> ../conf/register.routes
echo "GET        /insurerAddress                       controllers.register.InsurerAddressController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /insurerAddress                       controllers.register.InsurerAddressController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeInsurerAddress                       controllers.register.InsurerAddressController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeInsurerAddress                       controllers.register.InsurerAddressController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "GET        /changeSchemeAddressList               controllers.register.SchemeAddressListController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeSchemeAddressList               controllers.register.SchemeAddressListController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"insurerAddress__title = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__heading = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__field1 = Field 1" >> ../conf/messages.en
echo messages__"insurerAddress__field2 = Field 2" >> ../conf/messages.en
echo messages__"insurerAddress__checkYourAnswersLabel = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"insurerAddress__error__field2_required = Please give an answer for field2" >> ../conf/messages.en
echo "messages__schemeAddressList__title = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__heading = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__option1 = schemeAddressList" Option 1 >> ../conf/messages.en
echo "messages__schemeAddressList__option2 = schemeAddressList" Option 2 >> ../conf/messages.en
echo "messages__schemeAddressList__checkYourAnswersLabel = schemeAddressList" >> ../conf/messages.en
echo "messages__schemeAddressList__error__required = Please give an answer for schemeAddressList" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def insurerAddress: Option[AnswerRow] = userAnswers.get(InsurerAddressId) map {";\
     print "    x => AnswerRow(\"insurerAddress.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, controllers.register.routes.InsurerAddressController.onPageLoad(CheckMode).url)";\
     print "  def schemeAddressList: Option[AnswerRow] = userAnswers.get(SchemeAddressListId) map {";\
     print "    x => AnswerRow(\"messages__schemeAddressList__checkYourAnswersLabel\", s\"schemeAddressList.$x\", true, controllers.register.routes.SchemeAddressListController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration InsurerAddress completed"
echo "Migration SchemeAddressList completed"
