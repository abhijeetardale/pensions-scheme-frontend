#!/bin/bash

echo "Applying migration InsurerAddress"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /insurerAddress                       controllers.register.InsurerAddressController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /insurerAddress                       controllers.register.InsurerAddressController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeInsurerAddress                       controllers.register.InsurerAddressController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeInsurerAddress                       controllers.register.InsurerAddressController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"insurerAddress__title = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__heading = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__field1 = Field 1" >> ../conf/messages.en
echo messages__"insurerAddress__field2 = Field 2" >> ../conf/messages.en
echo messages__"insurerAddress__checkYourAnswersLabel = insurerAddress" >> ../conf/messages.en
echo messages__"insurerAddress__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"insurerAddress__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def insurerAddress: Option[AnswerRow] = userAnswers.get(InsurerAddressId) map {";\
     print "    x => AnswerRow(\"insurerAddress.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, controllers.register.routes.InsurerAddressController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration InsurerAddress completed"
