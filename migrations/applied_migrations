#!/bin/bash

echo "Applying migration UKBankDetails"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /uKBankDetails                       controllers.register.UKBankDetailsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /uKBankDetails                       controllers.register.UKBankDetailsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeUKBankDetails                       controllers.register.UKBankDetailsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeUKBankDetails                       controllers.register.UKBankDetailsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "uKBankDetails.title = uKBankDetails" >> ../conf/messages.en
echo "uKBankDetails.heading = uKBankDetails" >> ../conf/messages.en
echo "uKBankDetails.field1 = Field 1" >> ../conf/messages.en
echo "uKBankDetails.field2 = Field 2" >> ../conf/messages.en
echo "uKBankDetails.checkYourAnswersLabel = uKBankDetails" >> ../conf/messages.en
echo "uKBankDetails.error.field1.required = Please give an answer for field1" >> ../conf/messages.en
echo "uKBankDetails.error.field2.required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def uKBankDetails: Option[UKBankDetails] = cacheMap.getEntry[UKBankDetails](UKBankDetailsId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def uKBankDetails: Option[AnswerRow] = userAnswers.uKBankDetails map {";\
     print "    x => AnswerRow(\"uKBankDetails.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, routes.UKBankDetailsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration UKBankDetails completed"
