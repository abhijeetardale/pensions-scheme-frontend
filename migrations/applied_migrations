#!/bin/bash

echo "Applying migration CompanyDirectorUniqueTaxReference"

echo "Adding routes to register.establishers.company.director.routes"

echo "" >> ../conf/register.establishers.company.director.routes
echo "GET        /companyDirectorUniqueTaxReference                       controllers.register.establishers.company.director.CompanyDirectorUniqueTaxReferenceController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /companyDirectorUniqueTaxReference                       controllers.register.establishers.company.director.CompanyDirectorUniqueTaxReferenceController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes

echo "GET        /changeCompanyDirectorUniqueTaxReference                       controllers.register.establishers.company.director.CompanyDirectorUniqueTaxReferenceController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /changeCompanyDirectorUniqueTaxReference                       controllers.register.establishers.company.director.CompanyDirectorUniqueTaxReferenceController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__companyDirectorUniqueTaxReference__title = companyDirectorUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyDirectorUniqueTaxReference__heading = companyDirectorUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyDirectorUniqueTaxReference__checkYourAnswersLabel = companyDirectorUniqueTaxReference" >> ../conf/messages.en
echo "messages__companyDirectorUniqueTaxReference__error__required = Please give an answer for companyDirectorUniqueTaxReference" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyDirectorUniqueTaxReference: Option[AnswerRow] = userAnswers.get(identifiers.register.establishers.company.director.CompanyDirectorUniqueTaxReferenceId) map {";\
     print "    x => AnswerRow(\"companyDirectorUniqueTaxReference.checkYourAnswersLabel\", Seq(if(x) \"site.yes\" else \"site.no\"), true, controllers.register.establishers.company.director.routes.CompanyDirectorUniqueTaxReferenceController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyDirectorUniqueTaxReference completed"
