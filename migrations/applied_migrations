#!/bin/bash

echo "Applying migration CompanyAddress"

echo "Adding routes to establishers.routes"

echo "" >> ../conf/establishers.routes
echo "GET        /companyAddress                       controllers.register.establishers.company.CompanyAddressController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/establishers.routes
echo "POST       /companyAddress                       controllers.register.establishers.company.CompanyAddressController.onSubmit(mode: Mode = NormalMode)" >> ../conf/establishers.routes

echo "GET        /changeCompanyAddress                       controllers.register.establishers.company.CompanyAddressController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/establishers.routes
echo "POST       /changeCompanyAddress                       controllers.register.establishers.company.CompanyAddressController.onSubmit(mode: Mode = CheckMode)" >> ../conf/establishers.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"companyAddress__title = companyAddress" >> ../conf/messages.en
echo messages__"companyAddress__heading = companyAddress" >> ../conf/messages.en
echo messages__"companyAddress__field1 = Field 1" >> ../conf/messages.en
echo messages__"companyAddress__field2 = Field 2" >> ../conf/messages.en
echo messages__"companyAddress__checkYourAnswersLabel = companyAddress" >> ../conf/messages.en
echo messages__"companyAddress__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"companyAddress__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyAddress: Option[AnswerRow] = userAnswers.get(identifiers.establishers.CompanyAddressId) map {";\
     print "    x => AnswerRow(\"companyAddress.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.establishers.routes.CompanyAddressController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyAddress completed"
