#!/bin/bash

echo "Applying migration SecuredBenefits"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /securedBenefits                       controllers.register.SecuredBenefitsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /securedBenefits                       controllers.register.SecuredBenefitsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeSecuredBenefits                       controllers.register.SecuredBenefitsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeSecuredBenefits                       controllers.register.SecuredBenefitsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "securedBenefits.title = securedBenefits" >> ../conf/messages.en
echo "securedBenefits.heading = securedBenefits" >> ../conf/messages.en
echo "securedBenefits.checkYourAnswersLabel = securedBenefits" >> ../conf/messages.en
echo "securedBenefits.error.required = Please give an answer for securedBenefits" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def securedBenefits: Option[Boolean] = cacheMap.getEntry[Boolean](SecuredBenefitsId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def securedBenefits: Option[AnswerRow] = userAnswers.securedBenefits map {";\
     print "    x => AnswerRow(\"securedBenefits.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.SecuredBenefitsController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration SecuredBenefits completed"
