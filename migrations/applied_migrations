#!/bin/bash

echo "Applying migration DeclarationDormant"

echo "Adding routes to conf/register.routes"

echo "" >> ../conf/app.routes
echo "GET        /declarationDormant               controllers.register.DeclarationDormantController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /declarationDormant               controllers.register.DeclarationDormantController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeDeclarationDormant               controllers.register.DeclarationDormantController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeDeclarationDormant               controllers.register.DeclarationDormantController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__declarationDormant__title = declarationDormant" >> ../conf/messages.en
echo "messages__declarationDormant__heading = declarationDormant" >> ../conf/messages.en
echo "messages__declarationDormant__option1 = declarationDormant" Option 1 >> ../conf/messages.en
echo "messages__declarationDormant__option2 = declarationDormant" Option 2 >> ../conf/messages.en
echo "messages__declarationDormant__checkYourAnswersLabel = declarationDormant" >> ../conf/messages.en
echo "messages__declarationDormant__error__required = Please give an answer for declarationDormant" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def declarationDormant: Option[AnswerRow] = userAnswers.get(identifiers.register.DeclarationDormantId) map {";\
     print "    x => AnswerRow(\"messages__declarationDormant__checkYourAnswersLabel\", Seq(s\"declarationDormant.$x\"), true, controllers.register.routes.DeclarationDormantController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration DeclarationDormant completed"
