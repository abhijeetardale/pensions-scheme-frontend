#!/bin/bash

echo "Applying migration Test"

echo "Adding routes to register.establishers.company.routes"

echo "" >> ../conf/register.establishers.company.routes
echo "GET        /test               controllers.register.establishers.company.TestController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes
echo "POST       /test               controllers.register.establishers.company.TestController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.routes

echo "GET        /changeTest                        controllers.register.establishers.company.TestController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.routes
echo "POST       /changeTest                        controllers.register.establishers.company.TestController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "test.title = test" >> ../conf/messages.en
echo "test.heading = test" >> ../conf/messages.en
echo "test.checkYourAnswersLabel = test" >> ../conf/messages.en
echo "test.error.nonNumeric = Please give an answer for test using numbers" >> ../conf/messages.en
echo "test.error.required = Please give an answer for test" >> ../conf/messages.en
echo "test.error.wholeNumber = Please give an answer for test using whole numbers" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def test: Option[Int] = cacheMap.getEntry[Int](TestId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def test: Option[AnswerRow] = userAnswers.test map {";\
     print "    x => AnswerRow(\"test.checkYourAnswersLabel\", s\"$x\", false, routes.TestController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration Test completed"
