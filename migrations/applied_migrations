#!/bin/bash

echo "Applying migration CompanyPreviousAddressList"

echo "Adding routes to register.trustees.company.routes"

echo "" >> ../conf/register.trustees.company.routes
echo "GET        /companyPreviousAddressList               controllers.register.trustees.company.CompanyPreviousAddressListController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustees.company.routes
echo "POST       /companyPreviousAddressList               controllers.register.trustees.company.CompanyPreviousAddressListController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustees.company.routes

echo "GET        /changeCompanyPreviousAddressList                        controllers.register.trustees.company.CompanyPreviousAddressListController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustees.company.routes
echo "POST       /changeCompanyPreviousAddressList                        controllers.register.trustees.company.CompanyPreviousAddressListController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustees.company.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__companyPreviousAddressList__title = companyPreviousAddressList" >> ../conf/messages.en
echo "messages__companyPreviousAddressList__heading = companyPreviousAddressList" >> ../conf/messages.en
echo "messages__companyPreviousAddressList__checkYourAnswersLabel = companyPreviousAddressList" >> ../conf/messages.en
echo "messages__companyPreviousAddressList__error__required = Please give an answer for companyPreviousAddressList" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyPreviousAddressList: Option[AnswerRow] = userAnswers.get(identifiers.register.trustees.company.CompanyPreviousAddressListId) map {";\
     print "    x => AnswerRow(\"companyPreviousAddressList.checkYourAnswersLabel\", Seq(s\"$x\"), false, controllers.register.trustees.company.routes.CompanyPreviousAddressListController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyPreviousAddressList completed"
