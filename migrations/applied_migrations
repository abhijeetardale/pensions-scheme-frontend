#!/bin/bash

echo "Applying migration CompanyDirectorAddressYears"

echo "Adding routes to conf/register.establishers.company.director.routes"

echo "" >> ../conf/app.routes
echo "GET        /companyDirectorAddressYears               controllers.register.establishers.company.director.CompanyDirectorAddressYearsController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /companyDirectorAddressYears               controllers.register.establishers.company.director.CompanyDirectorAddressYearsController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.company.director.routes

echo "GET        /changeCompanyDirectorAddressYears               controllers.register.establishers.company.director.CompanyDirectorAddressYearsController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes
echo "POST       /changeCompanyDirectorAddressYears               controllers.register.establishers.company.director.CompanyDirectorAddressYearsController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.company.director.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__title = companyDirectorAddressYears" >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__heading = companyDirectorAddressYears" >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__option1 = companyDirectorAddressYears" Option 1 >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__option2 = companyDirectorAddressYears" Option 2 >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__checkYourAnswersLabel = companyDirectorAddressYears" >> ../conf/messages.en
echo "messages__companyDirectorAddressYears__error__required = Please give an answer for companyDirectorAddressYears" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def companyDirectorAddressYears: Option[AnswerRow] = userAnswers.get(identifiers.register.establishers.company.director.CompanyDirectorAddressYearsId) map {";\
     print "    x => AnswerRow(\"messages__companyDirectorAddressYears__checkYourAnswersLabel\", Seq(s\"companyDirectorAddressYears.$x\"), true, controllers.register.establishers.company.director.routes.CompanyDirectorAddressYearsController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration CompanyDirectorAddressYears completed"
