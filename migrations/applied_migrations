#!/bin/bash

echo "Applying migration Membership"

echo "Adding routes to conf/register.routes"

echo "" >> ../conf/app.routes
echo "GET        /membership               controllers.register.MembershipController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /membership               controllers.register.MembershipController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeMembership               controllers.register.MembershipController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeMembership               controllers.register.MembershipController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "membership.title = membership" >> ../conf/messages.en
echo "membership.heading = membership" >> ../conf/messages.en
echo "membership.option1 = membership" Option 1 >> ../conf/messages.en
echo "membership.option2 = membership" Option 2 >> ../conf/messages.en
echo "membership.checkYourAnswersLabel = membership" >> ../conf/messages.en
echo "membership.error.required = Please give an answer for membership" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def membership: Option[Membership] = cacheMap.getEntry[Membership](MembershipId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def membership: Option[AnswerRow] = userAnswers.membership map {";\
     print "    x => AnswerRow(\"membership.checkYourAnswersLabel\", s\"membership.$x\", true, controllers.register.routes.MembershipController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration Membership completed"
