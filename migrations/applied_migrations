#!/bin/bash

echo "Applying migration SchemeSuccess"

echo "Adding routes to register.routes"
echo "" >> ../conf/register.routes
echo "GET        /schemeSuccess                       controllers.register.SchemeSuccessController.onPageLoad()" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "schemeSuccess.title = schemeSuccess" >> ../conf/messages.en
echo "schemeSuccess.heading = schemeSuccess" >> ../conf/messages.en

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration SchemeSuccess completed"
