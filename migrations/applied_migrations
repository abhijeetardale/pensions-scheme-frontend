#!/bin/bash

echo "Applying migration InvestmentRegulated"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /investmentRegulated                       controllers.register.InvestmentRegulatedController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /investmentRegulated                       controllers.register.InvestmentRegulatedController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeInvestmentRegulated                       controllers.register.InvestmentRegulatedController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeInvestmentRegulated                       controllers.register.InvestmentRegulatedController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "investmentRegulated.title = investmentRegulated" >> ../conf/messages.en
echo "investmentRegulated.heading = investmentRegulated" >> ../conf/messages.en
echo "investmentRegulated.checkYourAnswersLabel = investmentRegulated" >> ../conf/messages.en
echo "investmentRegulated.error.required = Please give an answer for investmentRegulated" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def investmentRegulated: Option[Boolean] = cacheMap.getEntry[Boolean](InvestmentRegulatedId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def investmentRegulated: Option[AnswerRow] = userAnswers.investmentRegulated map {";\
     print "    x => AnswerRow(\"investmentRegulated.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.InvestmentRegulatedController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration InvestmentRegulated completed"
