#!/bin/bash

echo "Applying migration AddTrustee"

echo "Adding routes to register.trustees.routes"

echo "" >> ../conf/register.trustees.routes
echo "GET        /addTrustee               controllers.register.trustees.AddTrusteeController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.trustees.routes
echo "POST       /addTrustee               controllers.register.trustees.AddTrusteeController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.trustees.routes

echo "GET        /changeAddTrustee                        controllers.register.trustees.AddTrusteeController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.trustees.routes
echo "POST       /changeAddTrustee                        controllers.register.trustees.AddTrusteeController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.trustees.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "messages__addTrustee__title = addTrustee" >> ../conf/messages.en
echo "messages__addTrustee__heading = addTrustee" >> ../conf/messages.en
echo "messages__addTrustee__checkYourAnswersLabel = addTrustee" >> ../conf/messages.en
echo "messages__addTrustee__error__required = Please give an answer for addTrustee" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def addTrustee: Option[AnswerRow] = userAnswers.get(identifiers.register.trustees.AddTrusteeId) map {";\
     print "    x => AnswerRow(\"addTrustee.checkYourAnswersLabel\", Seq(s\"$x\"), false, controllers.register.trustees.routes.AddTrusteeController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration AddTrustee completed"
