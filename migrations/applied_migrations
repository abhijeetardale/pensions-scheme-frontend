#!/bin/bash

echo "Applying migration PreviousAddress"

echo "Adding routes to register.establishers.individual.routes"

echo "" >> ../conf/register.establishers.individual.routes
echo "GET        /previousAddress                       controllers.register.establishers.individual.PreviousAddressController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /previousAddress                       controllers.register.establishers.individual.PreviousAddressController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.establishers.individual.routes

echo "GET        /changePreviousAddress                       controllers.register.establishers.individual.PreviousAddressController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes
echo "POST       /changePreviousAddress                       controllers.register.establishers.individual.PreviousAddressController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.establishers.individual.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"previousAddress__title = previousAddress" >> ../conf/messages.en
echo messages__"previousAddress__heading = previousAddress" >> ../conf/messages.en
echo messages__"previousAddress__field1 = Field 1" >> ../conf/messages.en
echo messages__"previousAddress__field2 = Field 2" >> ../conf/messages.en
echo messages__"previousAddress__checkYourAnswersLabel = previousAddress" >> ../conf/messages.en
echo messages__"previousAddress__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"previousAddress__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def previousAddress: Option[AnswerRow] = userAnswers.get(PreviousAddressId) map {";\
     print "    x => AnswerRow(\"previousAddress.checkYourAnswersLabel\", s\"${x.field1} ${x.field2}\", false, controllers.register.establishers.individual.routes.PreviousAddressController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration PreviousAddress completed"
