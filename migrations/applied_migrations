#!/bin/bash

echo "Applying migration TrusteePreviousAddressList"

echo "Adding routes to register.trustees.individual.routes"
echo "" >> ../conf/register.trustees.individual.routes
echo "GET        /trusteePreviousAddressList                       controllers.register.trustees.individual.TrusteePreviousAddressListController.onPageLoad()" >> ../conf/register.trustees.individual.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "trusteePreviousAddressList.title = trusteePreviousAddressList" >> ../conf/messages.en
echo "trusteePreviousAddressList.heading = trusteePreviousAddressList" >> ../conf/messages.en

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration TrusteePreviousAddressList completed"
